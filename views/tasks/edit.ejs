<%- include("../template/nav.ejs") %>

<% console.log(`${task.dueDate.getFullYear()}-${task.dueDate.getMonth() + 1}-${task.dueDate.getDate()}`)%>

<body>
    <form action="/tasks/<%= task._id %>?_method=PUT" method="POST">
        <label>Name</label>
        <input type="text" name="name" value="<%= task.name %>"/></br>
        <label>Due Date</label>
        <input type="datetime-local" name="dueDate" value="<%= `${task.dueDate.getFullYear()}-${task.dueDate.getMonth() + 1}-${task.dueDate.getDate()}` %>"/></br>
        <input type="submit" name="" value="Submit changes"/>
    </form>
</body>